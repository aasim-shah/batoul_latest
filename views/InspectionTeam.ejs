<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <link rel="stylesheet" type="text/css" href="/css/inspectionteam-form.css">
</head>
<body>

    <%- include("./partials/header.ejs") %>
    <%- include("./partials/popup.ejs") %>

        
    <fieldset style="margin-top: 18rem; margin-bottom: 4rem; height: 45rem; width: 40rem;">
      <legend>Inspection Team Request Form</legend>
        <!--add action link-->
        <form action="/inpsectionTeam" method="post"  style="padding: 1rem;">
            <div class="d-flex mb-2 flex-column">
              <label for="first_name">First Name:</label>
            <input type="text" id="first_name" name="first_name" >
            <small class="text-danger my-1 text-start"><%= error.first_name ? error.first_name : "" %></small>
            </div>


            <div class="d-flex mb-2 flex-column">
            <label for="last_name">Last Name:</label>
            <input type="text" id="last_name" name="last_name" >
            <small class="text-danger my-1 text-start"><%= error.last_name ? error.last_name : "" %></small>
          </div>


          <div class="d-flex mb-2 flex-column">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" >
            <small class="text-danger my-1 text-start"><%= error.email ? error.email : "" %></small>
          </div>


          <div class="d-flex mb-2 flex-column">
            <label for="user_inquiry">User Inquiry:</label>
            <textarea id="user_inquiry" name="user_inquiry" rows="4" cols="50" ></textarea><br><br>
            <small class="text-danger my-1 text-start"><%= error.user_inquiry ? error.user_inquiry : "" %></small>
          </div>

            <button type="submit" id="submit">Submit</button>
          </fieldset>
        </form>

    <%- include("./partials/footer.ejs") %>

</body>
</html>